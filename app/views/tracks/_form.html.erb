<% action_url = (method == :post) ? tracks_url : track_url(track) %>

<form action="<%= action_url %>" method="post">
  <label for="name">Name
    <input id="name" name="track[name]" type="text" value="<%= track.name %>">
  </label>
  <label for="album_id">Album
    <select id="album_id" name="track[album_id]" value="<%= track.album_id %>">
      <%Album.all.each do |album|%>
        <option value="<%= album.id%>"> <%= album.name %> </option>
      <% end %>
    </select>
  </label>

  <label for="ord">Track Number
    <input id="ord" name="track[ord]" type="number" value="<%= track.ord%>">
  </label>
  <br>
  <h2><label for="lyrics">Lyrics
    <br>
    <textarea id="lyrics" name="track[lyrics]" rows="5" cols="10"><%= track.lyrics%></textarea>
  </label></h2>
  <br>

  <% if method != :post %>
    <input type="hidden" name="_method" value="put">
    <%= button_to("Delete Track", track_url(track), :method => :delete ) %>
  <% end %>

  <input type="hidden"
          name="authenticity_token"
          value="<%= form_authenticity_token %>">

  <input type="submit">
</form>



